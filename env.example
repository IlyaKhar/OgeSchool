# AI Provider Configuration
# Выберите провайдера: 'openai', 'deepseek', или 'ollama'
AI_PROVIDER=ollama

# OpenAI API (если используешь OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# DeepSeek API (рекомендуется для России)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# Ollama (локальная модель, если используешь)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Server Configuration
PORT=3000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# MongoDB Configuration
# Локальная MongoDB:
MONGODB_URI=mongodb://localhost:27017/oge-platform
# Или MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/oge-platform

# Admin configuration
# Email администратора, который имеет доступ к /api/admin/*
ADMIN_EMAIL=alina@gmail.com

# Frontend URL (опционально)
FRONTEND_URL=http://localhost:3000
